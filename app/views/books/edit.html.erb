<%= stylesheet_link_tag 'edit_style' %>
<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="form-field">
  <div>Title</div>
  <%= f. text_field :title %>
</div>

<div class="form-field">
  <div>Body</div>
  <%= f. text_area :body %>
  </div>
</div>

<div><%= f.submit 'Update Book', class: 'submit' %></div>

<div><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %></div>

<% end %>

